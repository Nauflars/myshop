pipeline {
    agent any
    
    options {
        skipDefaultCheckout()
    }
    
    stages {
        stage('Info') {
            steps {
                echo '=========================================='
                echo 'Myshop CI/CD Pipeline'
                echo '=========================================='
            }
        }
        
        stage('Workspace Check') {
            steps {
                sh 'echo "Current user: $(whoami)"'
                sh 'echo "Current dir: $(pwd)"'
                sh 'ls -la /workspace | head -20'
            }
        }
        
        stage('Build') {
            steps {
                sh 'cd /workspace && composer --version'
                sh 'cd /workspace && echo "Build stage completed"'
            }
        }
    }
    
    post {
        always {
            echo "Pipeline finished"
        }
        success {
            echo 'SUCCESS!'
        }
        failure {
            echo 'FAILED!'
        }
    }
}
