// Ultra-simplified CI/CD Pipeline
pipeline {
    agent any
    
    options {
        skipDefaultCheckout()
        timeout(time: 30, unit: 'MINUTES')
    }
    
    stages {
        stage('Info') {
            steps {
                echo "========== Myshop CI/CD Pipeline =========="
                echo "Build: ${BUILD_NUMBER}"
            }
        }
        
        stage('Test Commands') {
            steps {
                echo 'Testing basic commands...'
                sh 'echo "Shell works!"'
                sh 'pwd'
                sh 'whoami'
                sh 'ls -la /workspace | head -n 10'
            }
        }
    }
    
    post {
        always {
            echo "Build: ${currentBuild.result}"
        }
    }
}
