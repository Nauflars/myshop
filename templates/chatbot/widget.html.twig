{# Chatbot Widget - Embedded in base.html.twig #}
<div id="chatbot-widget" class="chatbot-widget">
    <div class="chatbot-header">
        <h6 class="mb-0">
            <i class="bi bi-robot"></i> Shopping Assistant
        </h6>
        <button type="button" class="btn-close btn-close-white" id="chatbot-close"></button>
    </div>
    <div class="chatbot-messages" id="chatbot-messages">
        <div class="chatbot-message bot">
            <div class="message-content">
                Hello! I'm your shopping assistant. How can I help you today?
                <div class="quick-replies mt-2">
                    <button class="btn btn-sm btn-outline-primary quick-reply">Search products</button>
                    <button class="btn btn-sm btn-outline-primary quick-reply">Check my cart</button>
                    <button class="btn btn-sm btn-outline-primary quick-reply">Track order</button>
                </div>
            </div>
        </div>
    </div>
    <div class="chatbot-input">
        <input type="text" 
               class="form-control" 
               id="chatbot-input" 
               placeholder="Type your message...">
        <button type="button" class="btn btn-primary" id="chatbot-send">
            <i class="bi bi-send-fill"></i>
        </button>
    </div>
</div>

<button type="button" class="chatbot-trigger btn btn-primary rounded-circle" id="chatbot-trigger">
    <i class="bi bi-chat-dots-fill"></i>
</button>
