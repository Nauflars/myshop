{# Chatbot Widget - Updated in spec-003 with clear chat button #}
<div id="chatbot-widget" class="chatbot-widget">
    <div class="chatbot-header">
        <h6 class="mb-0">
            <i class="bi bi-robot"></i> Asistente de Compras
        </h6>
        <div class="d-flex gap-2">
            <button type="button" class="btn btn-sm btn-outline-light" id="chatbot-clear" title="Limpiar conversaciÃ³n">
                <i class="bi bi-trash"></i>
            </button>
            <button type="button" class="btn-close btn-close-white" id="chatbot-close"></button>
        </div>
    </div>
    <div class="chatbot-messages" id="chatbot-messages">
        {# Messages will be loaded by JavaScript #}
    </div>
    <div class="chatbot-input">
        <input type="text" 
               class="form-control" 
               id="chatbot-input" 
               placeholder="Escribe tu mensaje...">
        <button type="button" class="btn btn-primary" id="chatbot-send">
            <i class="bi bi-send-fill"></i>
        </button>
    </div>
</div>

<button type="button" class="chatbot-trigger btn btn-primary rounded-circle" id="chatbot-trigger">
    <i class="bi bi-chat-dots-fill"></i>
</button>
