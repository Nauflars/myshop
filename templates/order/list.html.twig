{% extends 'base.html.twig' %}

{% block title %}My Orders{% endblock %}

{% block body %}
<div class="container">
    <h1 class="my-4">My Orders</h1>
    
    {% if app.request.query.get('success') %}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <h5 class="alert-heading">Order Placed Successfully!</h5>
        <p>Your order #{{ app.request.query.get('orderNumber') }} has been placed successfully. We'll send you an email confirmation shortly.</p>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
    {% endif %}
    
    <div id="orders-container">
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const ordersContainer = document.getElementById('orders-container');
    
    fetch('/api/orders')
        .then(response => {
            if (!response.ok) {
                if (response.status === 401) {
                    throw new Error('Please log in to view your orders.');
                }
                throw new Error('Failed to load orders');
            }
            return response.json();
        })
        .then(orders => {
            if (orders.length === 0) {
                ordersContainer.innerHTML = `
                    <div class="alert alert-info" role="alert">
                        <h4 class="alert-heading">No orders yet</h4>
                        <p>You haven't placed any orders yet. Start shopping to see your orders here!</p>
                        <hr>
                        <a href="/products" class="btn btn-primary">Browse Products</a>
                    </div>
                `;
                return;
            }
            
            ordersContainer.innerHTML = orders.map(order => {
                const statusBadge = getStatusBadge(order.status);
                
                return `
                    <div class="card mb-3">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="mb-0">Order #${escapeHtml(order.orderNumber)}</h5>
                                <small class="text-muted">Placed on ${new Date(order.createdAt).toLocaleDateString()}</small>
                            </div>
                            ${statusBadge}
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-8">
                                    <h6>Items (${order.items.length}):</h6>
                                    <ul class="list-unstyled">
                                        ${order.items.map(item => `
                                            <li class="mb-2">
                                                <strong>${escapeHtml(item.productName)}</strong> Ã— ${item.quantity}
                                                <strong>Price:</strong> ${(item.priceInCents / 100).toFixed(2)} ${item.currency} <br>

                                            </li>
                                        `).join('')}
                                    </ul>
                                </div>
                                <div class="col-md-4 text-end">
                                    <h5 class="mb-3">Total: ${order.total.currency} ${(order.total.amount / 100).toFixed(2)}</h5>
                                    <button class="btn btn-sm btn-outline-primary" onclick="viewOrderDetails('${order.orderNumber}')">
                                        View Details
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
            }).join('');
        })
        .catch(error => {
            console.error('Error loading orders:', error);
            ordersContainer.innerHTML = `
                <div class="alert alert-danger" role="alert">
                    ${error.message || 'Error loading orders. Please try again.'}
                    ${error.message.includes('log in') ? '<a href="/login" class="btn btn-primary mt-2">Log In</a>' : ''}
                </div>
            `;
        });
    
    function getStatusBadge(status) {
        const badges = {
            'pending': '<span class="badge bg-warning">Pending</span>',
            'confirmed': '<span class="badge bg-info">Confirmed</span>',
            'shipped': '<span class="badge bg-primary">Shipped</span>',
            'delivered': '<span class="badge bg-success">Delivered</span>',
            'cancelled': '<span class="badge bg-danger">Cancelled</span>'
        };
        return badges[status.toLowerCase()] || '<span class="badge bg-secondary">Unknown</span>';
    }
    
    function escapeHtml(text) {
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
    }
    
    window.viewOrderDetails = function(orderNumber) {
        // For now, just show an alert. In a full implementation, this would open a modal or navigate to a detail page
        alert('Order details for ' + orderNumber);
    };
});
</script>
{% endblock %}
