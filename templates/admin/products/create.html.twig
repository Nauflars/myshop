{% extends 'admin/base.html.twig' %}

{% block content %}
<div class="page-header">
    <h2>Crear Nuevo Producto</h2>
    <a href="{{ path('admin_products_list') }}" class="btn btn-secondary">← Volver a la lista</a>
</div>

<form method="post" style="max-width: 800px;">
    <div class="form-group">
        <label for="name">Nombre del Producto *</label>
        <input type="text" name="name" id="name" required placeholder="Ej: Laptop ASUS ROG">
    </div>
    
    <div class="form-group">
        <label for="price">Precio (USD) *</label>
        <input type="number" name="price" id="price" step="0.01" min="0.01" required placeholder="0.00">
        <small style="display: block; margin-top: 0.5rem; color: #7f8c8d;">
            Ingresa el precio en dólares (ej: 1299.99)
        </small>
    </div>
    
    <div class="form-group">
        <label for="stock">Stock Inicial *</label>
        <input type="number" name="stock" id="stock" min="0" required placeholder="0">
    </div>
    
    <div class="form-group">
        <label for="category">Categoría *</label>
        <input type="text" name="category" id="category" required placeholder="Ej: Laptops">
    </div>
    
    <div class="form-group">
        <label for="description">Descripción *</label>
        <textarea name="description" id="description" required placeholder="Descripción detallada del producto..."></textarea>
    </div>
    
    <div style="display: flex; gap: 1rem;">
        <button type="submit" class="btn btn-success">Crear Producto</button>
        <a href="{{ path('admin_products_list') }}" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
{% endblock %}
